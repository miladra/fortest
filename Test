@Table(keyspace = "your_keyspace_name", name = "transaction")
public class TransactionEntity {

    @PartitionKey
    private UUID id;

    @Column(name = "amount")
    private String amount;

    @Column(name = "branch_code")
    private String branchCode;

    @Column(name = "creditor_account_number")
    private String creditorAccountNumber;

    @Column(name = "creditor_account_type")
    private String creditorAccountType;

    @Column(name = "date_time")
    private String dateTime;

    @Column(name = "debtor_account_number")
    private String debtorAccountNumber;

    @Column(name = "debtor_account_type")
    private String debtorAccountType;

    @Column(name = "description")
    private String description;

    @Column(name = "is_synced")
    private String isSynced;

    @Column(name = "issuer")
    private String issuer;

    @Column(name = "serial_number")
    private String serialNumber;

    // Constructor, getters, and setters
}


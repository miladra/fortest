
import org.junit.Test;
import static org.junit.Assert.*;

import java.time.Instant;
import java.time.LocalTime;
import java.time.ZoneId;
import java.time.ZonedDateTime;
import java.time.format.DateTimeParseException;

public class AccessControlTest {
    
    @Test
    public void testAccessAllowed() {
        AccessControl ac = new AccessControl();
        ZonedDateTime accessDateFrom = ZonedDateTime.parse("2023-04-01T00:00:00.000+00:00");
        ZonedDateTime accessDateTo = ZonedDateTime.parse("2023-04-30T23:59:59.999+00:00");
        String accessTimeFrom = "08:00:00";
        String accessTimeTo = "16:00:00";
        Instant now = Instant.parse("2023-04-15T12:00:00.000Z");
        boolean result = ac.isAccessAllowed(accessDateFrom, accessDateTo, accessTimeFrom, accessTimeTo, now);
        assertTrue(result);
    }
    
